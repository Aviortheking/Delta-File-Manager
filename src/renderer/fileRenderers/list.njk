{% extends "../index.njk" %}

{% block filelist %}
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Last Time modified</th>
			<th>Size</th>
		</tr>
	</thead>
	<tbody>
	{% for file in files %}

		<tr class="type-{{file.type}}" data-file="{{ file.path }}">
			{% set thumb = file.getThumbnail() %}
			{% if thumb != undefined %}
				<td style="background-image: url({{ thumb }})">{{ file.name }}</td>
			{% else %}
				<td >{{ file.name }}</td>
			{% endif %}
			<td>{{ file.formatTime() }}</td>
			<td>{{ file.formatSize() }}</td>
		</tr>
	{% endfor %}
	</tbody>

</table>
{% endblock %}
